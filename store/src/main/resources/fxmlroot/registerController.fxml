        <Label fx:id="lbPropNotDefined" layoutX="164.0" layoutY="80.0" text="One of the properties was not entered!"
               textFill="#dd0a0a" visible="false"/>
        <Button layoutX="196.0" layoutY="306.0" mnemonicParsing="false" onAction="#onBackClick" text="Back"/>
    </children>
</Pane>
