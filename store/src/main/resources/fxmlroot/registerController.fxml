<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<Pane onKeyPressed="#onKeyPressed" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.RaulDragoiu.store.ui.RegisterController">
    <children>
        <Label layoutX="130.0" layoutY="125.0" text="Name:"/>
        <Label layoutX="130.0" layoutY="173.0" text="Password:"/>
        <Label layoutX="133.0" layoutY="221.0" text="Confirm Password:"/>
        <TextField fx:id="tfName" layoutX="323.0" layoutY="120.0"/>
        <TextField fx:id="tfPassword" layoutX="323.0" layoutY="168.0"/>
        <TextField fx:id="tfConfirmPassword" layoutX="323.0" layoutY="216.0"/>
        <Button layoutX="323.0" layoutY="306.0" mnemonicParsing="false" onAction="#onConfimedClick" text="Confirm"/>
        <Label fx:id="lbPasswordMissmatch" layoutX="212.0" layoutY="265.0" text="Passwords are not the same!"
